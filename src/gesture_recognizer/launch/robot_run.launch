<launch>
    <!-- Start Gazebo with TurtleBot3 -->
    <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch"/>

    <!-- Start Turtlesim -->
    <node name="turtlesim_node" pkg="gesture_recognizer" type="turtlesim_node" output="screen"/>

    <!-- Run Python nodes -->
    <node name="turtle_controller" pkg="gesture_recognizer" type="turtle_controller.py" output="screen"/>

    <node name="image_subscriber" pkg="gesture_recognizer" type="gesture_publisher.py" output="screen">
        <param name="min_detection_confidence" value="0.5"/>
        <param name="min_tracking_confidence" value="0.5"/>
    </node>
</launch>
